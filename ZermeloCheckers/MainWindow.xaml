<Window x:Class="ZermeloCheckers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZermeloCheckers"
        xmlns:viewModels="clr-namespace:ZermeloCheckers.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
>
    <Window.DataContext>
        <viewModels:BoardViewModel/>
    </Window.DataContext>

    <Grid>
        <local:Board 
            x:Name="gameBoard"
            Height="400"
            Width="400"
            Player1Figures="{Binding Player1Figures}"
            Player2Figures="{Binding Player2Figures}"
        >
        </local:Board>
    </Grid>
</Window>
